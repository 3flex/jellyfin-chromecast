{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["dom", "ES2015"],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist/",
        "verbatimModuleSyntax": true,
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"]
        },
        "types": ["@types/chromecast-caf-receiver", "vite/client"]
    }
}
